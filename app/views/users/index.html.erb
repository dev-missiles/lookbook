
  <body>
    <h1>List of Users</h1>

    <table border="1">
      <thead>
        <tr>
          <th>ID</th>
          <th>Email</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Image</th>
          <th>Cohort</th>
          <th>Created At</th>
          <th>Updated At</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @list_of_users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.email %></td>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.image %> </td>
            <td><%= user.cohort.name %></td>
            <td><%= user.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
            <td><%= user.updated_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
            <td>
              <a href="/users/<%= user.id %>">
                Show details
              </a>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </body>
